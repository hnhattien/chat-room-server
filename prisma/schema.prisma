generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Message {
  id     String @id @default(uuid())
  text   String
  userId String
  roomId String
  room   Room   @relation(fields: [roomId], references: [id])
  user   User   @relation(fields: [userId], references: [id])
}

model User {
  id                  String    @id @default(uuid())
  email               String    @unique
  name                String
  username            String    @unique
  password            String
  invalidateTokenUUID String
  avatar              String    @default("default_user.png")
  messages            Message[]
  rooms               Room[]
}

model TokenRotation {
  id     String @id @default(uuid())
  userId String
  iat    String
}

model Room {
  id        String    @id @default(uuid())
  title     String
  maxClient Int
  avatar    String    @default("default_room.png")
  messages  Message[]
  users     User[]
}
